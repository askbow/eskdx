m4_ESKDX_INIT
m4_FILE_INIT
\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{eskdbiblist}[m4_dnl
m4_FILE_ID([[$Date$]]) Bibliography List]

\newcommand{\ESKDbiblabel}[1]{#1.}

\newenvironment*{ESKDbiblist}[2][0]{
  \list{\ESKDbiblabel{\@arabic\c@enumiv}}{%
    \settowidth\labelwidth{\ESKDbiblabel{#2}}%
    \leftmargin\labelwidth \advance\leftmargin\labelsep \itemsep\parsep
    \usecounter{enumiv}\let\p@enumiv\@empty
    \renewcommand\theenumiv{\@arabic\c@enumiv}%
  }%
  \setcounter{enumiv}{#1}%
   \sloppy \widowpenalty 4000
   \clubpenalty 4000 \@clubpenalty \clubpenalty
   \sfcode`\.\@m
}{\def\@noitemerr{\@latex@warning{Empty `ESKDbiblist' environment}}%
  \endlist
}

\newenvironment{ESKDbibliography}{%
  \section*{\bibname}\addcontentsline{toc}{section}{\bibname}
  \ESKDbiblist[0]}{\endESKDbiblist}

