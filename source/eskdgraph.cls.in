m4_ESKDX_INIT
m4_FILE_INIT
\NeedsTeXFormat{LaTeX2e}
\ProvidesClass{eskdgraph}[
m4_FILE_ID([[$Date$]]) Graphical Documentation]

\DeclareOption{russian}{\PassOptionsToPackage{\CurrentOption}{eskdlang}}
\DeclareOption{ukrainian}{\PassOptionsToPackage{\CurrentOption}{eskdlang}}
\DeclareOption{koi8-r}{\PassOptionsToPackage{\CurrentOption}{eskdlang}}
\DeclareOption{koi8-u}{\PassOptionsToPackage{\CurrentOption}{eskdlang}}
\DeclareOption{cp1251}{\PassOptionsToPackage{\CurrentOption}{eskdlang}}
\DeclareOption{iso8859-5}{\PassOptionsToPackage{\CurrentOption}{eskdlang}}
\DeclareOption{cp866}{\PassOptionsToPackage{\CurrentOption}{eskdlang}}
\DeclareOption{draft}{\PassOptionsToClass{\CurrentOption}{article}}
\DeclareOption{twoside}{%
  \ClassError{eskdgraph}{Two side printing is not allowed for
    graphical documentation}{}}
\DeclareOption{formII}{%
  \ClassError{eskdgraph}{formII style is for textual documentation}{}}
\DeclareOption*{\PassOptionsToPackage{\CurrentOption}{eskdstamp}}

\ProcessOptions\relax

\LoadClass{article}
\RequirePackage{eskdlang}
\RequirePackage[formI,columnxxvi,ignorestamp]{eskdstamp}

% нименование изделия
\newcommand{\ESKDtheUnitName}{}
\newcommand{\ESKDunitName}[1]{%
  \renewcommand{\ESKDtheUnitName}{#1}}

% обозначение документа (код)
\newcommand{\ESKDtheSignature}{}
\newcommand{\ESKDsignature}[1]{%
  \renewcommand{\ESKDtheSignature}{#1}}

% литера
\newcommand{\ESKDtheLetterI}{}
\newcommand{\ESKDtheLetterII}{}
\newcommand{\ESKDtheLetterIII}{}
\newcommand{\ESKDletter}[3]{%
  \renewcommand{\ESKDtheLetterI}{#1}%
  \renewcommand{\ESKDtheLetterII}{#2}%
  \renewcommand{\ESKDtheLetterIII}{#3}}

% обозначение материала детали
\newcommand{\ESKDtheMaterial}{}
\newcommand{\ESKDmaterial}[1]{%
  \renewcommand{\ESKDtheMaterial}{#1}}

% масса изделия
\newcommand{\ESKDtheMass}{}
\newcommand{\ESKDmass}[1]{%
  \renewcommand{\ESKDtheMass}{#1}}

% масштаб
\newcommand{\ESKDtheScale}{}
\newcommand{\ESKDscale}[1]{%
  \renewcommand{\ESKDtheScale}{#1}}

% группа, индекс, или наименование предприятия
\newcommand{\ESKDtheGroup}{}
\newcommand{\ESKDgroup}[1]{\renewcommand{\ESKDtheGroup}{#1}}

% фамилия автора
\newcommand{\ESKDtheAuthor}{}
\newcommand{\ESKDauthor}[1]{%
  \renewcommand{\ESKDtheAuthor}{#1}%
  \renewcommand{\@author}{#1}}
\renewcommand{\author}[1]{\ESKDauthor{#1}}

% фамилия проверяющего
\newcommand{\ESKDtheChecker}{}
\newcommand{\ESKDchecker}[1]{\renewcommand{\ESKDtheChecker}{#1}}

% фамилия нормоконтролера
\newcommand{\ESKDtheNormContr}{}
\newcommand{\ESKDnormContr}[1]{\renewcommand{\ESKDtheNormContr}{#1}}

% дата
\newcommand{\ESKDdate}[3]{\date{#1/#2/#3}}

\ESKDcolumnI{\ESKDtheUnitName}
\ESKDcolumnII{\ESKDtheSignature}
\ESKDcolumnIII{\ESKDtheMaterial}
\ESKDcolumnIVfI{\ESKDtheLetterI}
\ESKDcolumnIVfII{\ESKDtheLetterII}
\ESKDcolumnIVfIII{\ESKDtheLetterIII}
\ESKDcolumnV{\ESKDtheMass}
\ESKDcolumnVI{\ESKDtheScale}
\ESKDcolumnIX{\ESKDtheGroup}
\ESKDcolumnXIfI{\ESKDtheAuthor}
\ESKDcolumnXIfII{\ESKDtheChecker}
\ESKDcolumnXIfV{\ESKDtheNormContr}

\newenvironment{ESKDdrawing}{%
  \clearpage\mbox{}\strut\par\vspace{-\baselineskip}\vfill%
  \begin{center}}{\end{center}\vfill\clearpage}

%\RequirePackage{eskdaddtopkg}
% настройки пакета hyperref
\ESKDaddToPackage{hyperref}{%
\hypersetup{breaklinks,pdftitle=\ESKDtheUnitName,%
pdfsubject=\ESKDtheUnitName,pdfauthor=\ESKDtheAuthor}}

